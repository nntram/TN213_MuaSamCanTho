
@{
    Layout = null;
}


    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Đăng nhập</title>


        <script src="~/Content/js/jquery-3.5.1.min.js"></script>
        <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />


        <link href="~/Content/toastr.css" rel="stylesheet" />
        <script src="~/Scripts/toastr.js"></script>

        <link href="~/Content/css/login.css" rel="stylesheet" />


    </head>
    <body>

        @Html.Action("ThongBaoPartial", "Home")
        <div class="overlay">
            <!-- LOGN IN FORM by Omar Dsoky -->
            <form action="@Url.Action("DangNhap")"  method="post">
                <!--   con = Container  for items in the form-->
                <div class="con">
                    <!--     Start  header Content  -->
                    <header class="head-form">
                        <h2>Đăng nhập</h2>
                        <!--     A welcome message or an explanation of the login form -->
                        <p>Đăng nhập bằng tên đăng nhập và mật khẩu</p>
                    </header>
                    <!--     End  header Content  -->
                    <br>
                    <div class="field-set">
                       
                        <!--   user name -->
                        <span class="input-item">
                            <i class="fa fa-user"></i>
                        </span>
                        <!--   user name Input-->
                        <input class="form-input" id="txt-input" type="text" placeholder="Tên đăng nhập" name="username" required>

                        <br>

                        <!--   Password -->

                        <span class="input-item">
                            <i class="fa fa-key"></i>
                        </span>
                        <!--   Password Input-->
                        <input class="form-input" type="password" placeholder="Mật khẩu" id="pwd" name="password" required>

                        <!--      Show/hide password  -->

                        <span>
                            <i class="fa fa-eye" aria-hidden="true" type="button" id="eye"></i>
                        </span>


                        <br>
                        <!--        buttons -->
                        <!--      button LogIn -->
                        <button class="log-in" type="submit"> Đăng nhập </button>
                    </div>



                    <!--   other buttons -->
                    <div class="other">

                        <a class="button" href="~/Home/Index">Trở về trang chủ</a>


                        <!--      End Other the Division -->
                    </div>

                    <!--   End Conrainer  -->
                </div>

                <!-- End Form -->
            </form>
        </div>
    </body>

    <script src="~/Content/js/login.js"></script>
</html>



