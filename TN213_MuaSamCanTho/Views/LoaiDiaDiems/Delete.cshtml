@model TN213_MuaSamCanTho.Models.LoaiDiaDiem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ad-container" style="padding-bottom:30px">
    <h2>Xóa loại địa điểm mua sắm</h2>

    <h3>Bạn thực sự muốn xóa loại địa điểm này?</h3>
    <p>Mã loại địa điểm: @Model.MaLoai</p>

    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên loại địa điểm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenLoai)
            </dd>

            <dt>
               Ghi chú
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GhiChu)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn btn-default" /> |
                @Html.ActionLink("Trở về", "Index")
            </div>
        }
    </div>
</div>