@model IEnumerable<TN213_MuaSamCanTho.Models.LoaiDiaDiem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ad-container" style="padding-bottom:30px">
    <h2>Loại địa điểm</h2>

    <p>
        <a class="btn btn-info" href="@Url.Action("Create")"> <i class="fa fa-plus"></i>  Tạo mới</a>
    </p>
    <table class="table">
        <tr>
            <th>
                Mã
            </th>
            <th>
                Tên loại địa điểm
            </th>
            <th>
                Ghi chú
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GhiChu)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaLoai }) |
           
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaLoai })
        </td>
    </tr>
        }

    </table>
</div>