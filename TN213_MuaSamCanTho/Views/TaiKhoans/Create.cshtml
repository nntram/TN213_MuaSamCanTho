@model TN213_MuaSamCanTho.Models.TaiKhoan

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="ad-container">
    <h2>Tạo mới tài khoản</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class = "control-label col-md-2">Tên đăng nhập</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenDangNhap, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.TenDangNhap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-8"> Mật khẩu mặc định là: 12345. Người dùng tự đổi mật khẩu sau khi đăng nhập.</label>
                
            </div>

            <div class="form-group">
                <label class="control-label col-md-2"> Tên người dùng</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-5"> Tài khoản có quyền quản trị</label>
                <div class="col-md-10">
                    <div class="checkbox">
                        <select class="list-box tri-state form-control col-md-5" id="QuyenAdmin" name="QuyenAdmin">
                            <option value="true">True</option>
                            <option value="false" selected="selected">False</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.QuyenAdmin, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Trở về", "Index")
    </div>
</div>